{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Typescript Deugger",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\/src\/",  // Path to file to debug
            "runtimeArgs": ["-r", "ts-node/register", "-r", "tsconfig-paths/register"],
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ]
        }
    ]
}