{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C++ build active file",
            "command": "g++",
            "args": ["-std=c++11", "-g", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}"],
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "C++ run active file with custom header imports",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I",
                "${fileDirname}",
                "${fileDirname}/**/*.cpp",
                "&&",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": ["$gcc"]
            // "dependsOn": ["C++ build active file"]
        },
        {
            "label": "C++ run active current file ",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${fileDirname}/${fileBasenameNoExtension}.cpp",
                "&&",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": ["$gcc"]
            // "dependsOn": ["C++ build active file"]
        }
    ],
    "type": "shell",
    "presentation": {
        "focus": true,
        "panel": "shared",
        "clear": true
    },
    "options": {
        "cwd": "${workspaceFolder}"
    }
}
