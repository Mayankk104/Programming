{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C++ build active file",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "C++ run active file",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "problemMatcher": ["$gcc"],
            "dependsOn": ["C++ build active file"]
        },
        {
            "label": "TypeScript run active file",
            "command": "npx ts-node ${relativeFile}",
            "problemMatcher": "$tsc"
        }
    ],
    "type": "shell",
    "presentation": {
        "focus": true,
        "panel": "shared",
        "clear": true
    },
    "options": {
        "cwd": "${workspaceFolder}"
    }
}
