{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run active file",
            "command": "npx ts-node ${relativeFile}",
            "problemMatcher": "$tsc"
        }
    ],
    "type": "shell",
    "presentation": {
        "focus": true,
        "panel": "shared",
        "clear": true,
        "echo": false,
        "showReuseMessage": false
    },
    "options": {
        "cwd": "${workspaceFolder}"
    }
}
