{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C++ build active file",
            "command": "/opt/homebrew/bin/g++-11",
            "args": [
                "-std=c++11",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "C++ run active file",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "C++ build active file"
            ],
            "presentation": {
                "focus": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            }
        },
        {
            "label": "TS run current file withnodemon",
            "command": "npx ts-node ${relativeFile}",
            "type": "shell",
            "group": {
                "kind": "none",
            },
            "problemMatcher": "$tsc"
        }
    ]
}