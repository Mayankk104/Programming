// 19. Remove Nth Node From End of List https://leetcode.com/problems/remove-nth-node-from-end-of-list/

class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
        int8_t count = 1;
        ListNode* temp = head;
        
        while(temp->next){
            count++;
            temp = temp->next;
        }
        
        if(count == n){
            head = head->next;
            return head;
        }
        
        count -= n; 
        temp = head;
        
        while(count!=1){
           temp = temp->next;
            count--;
        }
        
        temp->next = temp->next->next;      
        return head;
    }
};